<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Image background -->
    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background_image" />

    <!-- Translucent overlay of background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33FFFFFF" />

    <!-- Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">


        <!-- Left-side fields -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Name field with Animation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_person" />

                <TextView
                    android:id="@+id/nameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <EditText
                android:id="@+id/nameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_outline"
                android:hint="Enter your name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="16sp"
                tools:ignore="Autofill"
                android:layout_marginBottom="16dp"/>

            <!-- Contact number field with Animation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_contact" />

                <TextView
                    android:id="@+id/contactNumberLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Number"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <EditText
                android:id="@+id/contactNumberField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_outline"
                android:hint="Enter your contact number"
                android:inputType="phone"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="16sp"
                tools:ignore="Autofill"
                android:layout_marginBottom="16dp"/>

            <!-- Email field with Animation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_email" />

                <TextView
                    android:id="@+id/emailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <EditText
                android:id="@+id/emailField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_outline"
                android:hint="Enter your email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="16sp"
                tools:ignore="Autofill"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

        <!-- Right-side fields -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Date selection field with Animation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/dateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <EditText
                android:id="@+id/dateField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_outline"
                android:clickable="true"
                android:focusable="false"
                android:hint="Select a date"
                android:inputType="none"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="#FFFEFE"
                android:textColorHint="#FFFFFF"
                android:textSize="16sp"
                tools:ignore="Autofill"
                android:layout_marginBottom="16dp"/>

            <!-- Time selection field with Animation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_clock" />

                <TextView
                    android:id="@+id/timeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <EditText
                android:id="@+id/timeField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_outline"
                android:clickable="true"
                android:focusable="false"
                android:hint="Select a time"
                android:inputType="none"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="16sp"
                tools:ignore="Autofill"
                android:layout_marginBottom="16dp"/>


            <!-- Remarks field with Animation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_remarks" />

                <TextView
                    android:id="@+id/remarksLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remarks"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <EditText
                android:id="@+id/remarksField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_outline"
                android:hint="Enter any remarks and No.Of Pax"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="16sp"
                tools:ignore="Autofill"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Privacy policy checkbox -->
    <CheckBox
        android:id="@+id/privacyCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I accept the privacy policy"
        android:textSize="18dp"
        android:textColor="#000000"
        android:backgroundTint="@android:color/transparent"
        android:layout_gravity="bottom|start"
        android:textStyle="italic"
        android:layout_margin="16dp" />

    <!-- Button container with Animation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_gravity="bottom|end">

        <!-- Submit button with Animation -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:enabled="false"
            android:background="@drawable/submit_button_background"
            android:textColor="#000000"
            android:padding="10dp"
            android:layout_margin="8dp" />

        <!-- Exit button with Animation -->
        <Button
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HomePage"
            android:background="@drawable/exit_button_background"
            android:textColor="#000000"
            android:padding="10dp"
            android:layout_margin="8dp" />

    </LinearLayout>


</FrameLayout>