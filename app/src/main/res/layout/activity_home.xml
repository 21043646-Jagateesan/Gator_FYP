<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Image background -->
    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_image_altaf" />

    <!-- Translucent overlay of background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66FFFFFF" />

    <!-- Home page header -->
    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:alpha="1"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="FAQs/OTHERS" />

    <!-- Grid layout for the 4 buttons -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:useDefaultMargins="true"
        android:layout_centerInParent="true">

        <!-- About Us Button -->
        <Button
            android:id="@+id/aboutButton"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="About Us"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:onClick="goToAboutUs" />

        <!-- FAQs Button -->
        <Button
            android:id="@+id/faqsButton"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="FAQs"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:onClick="goToFaqs" />

        <!-- Quiz Button -->
        <Button
            android:id="@+id/quizButton"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Quiz"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:onClick="goToQuiz" />

        <!-- Animation Button -->
        <Button
            android:id="@+id/animationButton"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Animation"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:onClick="goToAnimate" />

    </GridLayout>

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:onClick="goBack" />

</RelativeLayout>
