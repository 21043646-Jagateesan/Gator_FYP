<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outline -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/edittext_outline_color" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Background color -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#3C3A3A" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
